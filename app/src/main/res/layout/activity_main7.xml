<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="false"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="680dp"
        android:src="@drawable/speedometer" />

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="110dp"
        android:fontFamily="@font/belgrano"
        android:text="SPEEDOMETER"
        android:textColor="#99000000"
        android:textSize="48sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="368dp"
        android:layout_height="83dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="128dp"
        android:text="00"
        android:textColor="#20C98C"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <!--    <TextView-->
    <!--        android:id="@+id/speed_units"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentEnd="true"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:layout_marginStart="40dp"-->
    <!--        android:layout_marginEnd="161dp"-->
    <!--        android:layout_marginBottom="114dp"-->
    <!--        android:text="km/hr"-->
    <!--        android:textColor="#99000000"-->
    <!--        android:textSize="40sp"-->
    <!--        tools:ignore="TextContrastCheck" />-->

    <View
        android:id="@+id/navigationBar"
        android:layout_width="412dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/shape_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/speed" />

    <Button
        android:id="@+id/measure_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="-20dp"
        android:background="#0520C98C"
        app:icon="@drawable/ic_noun_measure_3214569"
        app:iconTint="#99000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/speedometer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-60dp"
        android:background="#0520C98C"
        app:icon="@drawable/ic_noun_speedometer_1036273"
        app:iconTint="#99000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/compass_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-22dp"
        android:background="#0520C98C"
        app:icon="@drawable/ic_noun_compass_4194101"
        app:iconTint="#99000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/timer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="277dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-28dp"
        android:background="#0520C98C"
        app:icon="@drawable/ic_noun_stopwatch_4194937"
        app:iconTint="#99000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="146dp"
        android:layout_height="51dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="200dp"
        android:text="@string/units"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</RelativeLayout>