<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="false"
    tools:context=".MainActivity4">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/measure_light_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/light" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="110dp"
        android:fontFamily="@font/belgrano"
        android:text="MEASURE"
        android:textColor="#99000000"
        android:textSize="55sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/belgrano"
        android:text="Light"
        android:textColor="#20C98C"
        android:textSize="24sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="90dp"
        android:text="00"
        android:textColor="#20C98C"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/light_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="110dp"
        android:text="lumens"
        android:textColor="#99000000"
        android:textSize="40sp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/light_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="323dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="550dp"
        android:text="dark"
        android:textColor="#99000000"
        android:textSize="34sp"
        tools:ignore="TextContrastCheck" />

    <View
        android:id="@+id/navigationBar"
        android:layout_width="412dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/shape_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/brightness" />

    <Button
        android:id="@+id/measure_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="-20dp"
        android:background="#0520C98C"
        app:icon="@drawable/ic_noun_measure_3214569"
        app:iconTint="#99000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/speedometer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-60dp"
        android:background="#0520C98C"
        app:icon="@drawable/ic_noun_speedometer_1036273"
        app:iconTint="#99000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/compass_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-22dp"
        android:background="#0520C98C"
        app:icon="@drawable/ic_noun_compass_4194101"
        app:iconTint="#99000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/timer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="277dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-28dp"
        android:background="#0520C98C"
        app:icon="@drawable/ic_noun_stopwatch_4194937"
        app:iconTint="#99000000"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>
